<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ztdh.promote">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".PromoteApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.login.loginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.user.MoneyActivity"/>
        <activity android:name=".ui.user.RecommendActivity"/>
        <activity android:name=".ui.user.IdentityActivity"/>
        <activity android:name=".ui.main.MainActivity"/>
        <activity android:name=".ui.login.RegisterActivity"/>
        <activity android:name=".ui.user.ModifyPasswordActivity"/>
    </application>

</manifest>